<?xml version="1.0" encoding="utf-8"?>
<manifest package="wsadurski.com.githubclient"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".GithubClientApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.repositories.RepositoriesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.details.RepositoryDetailsActivity"
            android:theme="@style/RepositoryDetailsTheme" />

        <uses-library android:name="android.test.runner"
            android:required="false" />
    </application>
</manifest>